# Ghostty Configuration
# https://ghostty.org/docs/config

# Theme - Catppuccin Mocha
theme = Catppuccin Mocha

# Window
gtk-titlebar = false
window-padding-x = 10
window-padding-y = 10

# Font
font-family = MesloLGM Nerd Font Mono
font-size = 12

# Send CSI u sequences for Ctrl+J/K so nvim can distinguish them from Enter
keybind = ctrl+j=text:\x1b[106;5u
keybind = ctrl+k=text:\x1b[107;5u
